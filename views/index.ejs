<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

  </head>
  <body>
    <h1>animals Dashboard</h1>
    <div>
            <% for (idx in animals) { %>
              <p>Name: <a href="/<%= animals[idx]._id %>"><%= animals[idx].name %></a>
                <a href="/<%= animals[idx]._id %>/edit/">Edit dog</a>
                <form action="/<%= animals[idx]._id %>/delete/" method='post'>
                  <input type="submit" value="Delete">
                </form>
              </p>
            <% } %>
      </div>
      <p><a href="/new">Add New animals</a></p>

  </body>
</html>
